# LINKEDIN AUTOMATION ENGINE - ENVIRONMENT CONFIGURATION
# Copy this file to .env and fill in your actual credentials
# NEVER commit .env file to version control!

# ===========================
# GITHUB API CONFIGURATION
# ===========================
# Required: GitHub Personal Access Token
# Scopes needed: repo, read:user
# Get your token: https://github.com/settings/tokens
GITHUB_TOKEN=your_github_personal_access_token_here

# Required: Your GitHub username
GITHUB_USERNAME=your_github_username

# Optional: Minimum commit count to trigger post generation (default: 1)
MIN_COMMIT_COUNT=1

# ===========================
# LLM CONFIGURATION
# ===========================
# Optional: HuggingFace API Token (free tier available)
# Get your token: https://huggingface.co/settings/tokens
# If not provided, will use fallback template generation
HUGGINGFACE_TOKEN=

# ===========================
# IMAGE CONFIGURATION
# ===========================
# Optional: Unsplash Access Key (free tier: 50 requests/hour)
# Get your key: https://unsplash.com/developers
UNSPLASH_ACCESS_KEY=

# Optional: Pexels API Key (free tier: 200 requests/hour)
# Get your key: https://www.pexels.com/api/
PEXELS_API_KEY=

# ===========================
# LINKEDIN API CONFIGURATION
# ===========================
# Optional: LinkedIn OAuth2 Access Token
# Required scopes: w_member_social
# Get your token: https://www.linkedin.com/developers/apps
# If not provided, posts will be queued for manual publishing
LINKEDIN_ACCESS_TOKEN=

# Required for auto-publish: Your LinkedIn Person URN
# Format: urn:li:person:XXXXXXXXX
# Find it by calling LinkedIn /me endpoint with your token
LINKEDIN_PERSON_URN=

# Auto-publish mode (true/false)
# If false, all posts will be queued for manual approval (RECOMMENDED)
LINKEDIN_AUTO_PUBLISH=false

# ===========================
# SCHEDULER CONFIGURATION
# ===========================
# Cron schedule for automated workflow execution
# Default: Every 6 hours
# Format: minute hour day month weekday
# Examples:
#   0 */6 * * *  = Every 6 hours
#   0 9 * * *    = Every day at 9 AM
#   0 */2 * * *  = Every 2 hours
CRON_SCHEDULE=0 */6 * * *

# ===========================
# LOGGING CONFIGURATION
# ===========================
# Log level: debug, info, warn, error
LOG_LEVEL=info

# Log file path (relative to project root)
LOG_FILE=./logs/automation.log

# ===========================
# SYSTEM CONFIGURATION
# ===========================
# Node environment
NODE_ENV=production

# Server port (if running as API)
PORT=3000
